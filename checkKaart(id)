<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Memory</title>
	<style>
		div#container{
		width: 1000px;
		margin: auto;
		}
	</style>
</head>
<body>
	<div id="container"></div>
	<center><p id="status">Klik twee kaartjes</p></center>
	<script>
		var kaart = new Array(); // Array Kaart bevat de bestandsnamen van de kaartafbeeldingen
		var aantal = 10; // aantal verschillende kaarten. Wordt later instelbaar.
		var count = 0;
		var aantalGeklikt=0;
		var kaart1='';
		var kaart2='';
		initKaart(aantal);
		schudKaart(aantal);
		toonKaart(aantal);
		console.log(kaart);
		
		function initKaart(aantal){
			for(var i=0;i<aantal;i++){
				kaart.push(i+1+".jpg");
				kaart.push(i+1+".jpg");
			}
		}
		
		function schudKaart(aantal){
			for(x = (aantal * 2) - 1; x > 0; x--){
				var temp = kaart[x];
				var y = Math.floor(Math.random() * (x + 1));
				kaart[x] = kaart[y];
				kaart[y] = temp;
			}
		}
		
		function toonKaart(aantal){
			for(i = 0; i < kaart.length; i++){
				count++;
				document.getElementById('container').innerHTML += "<img src='"+kaart[i]+"' id='"+kaart[i]+"' onclick='checkKaart(this.id)'>";
			}
		}
		
		function checkKaart(id){
			var newId=id.substring(0,id.length-4);
			if(aantalGeklikt==0){
				kaart1=newId;
				document.getElementById("status").innerHTML="Klik op het tweede kaartje";
				aantalGeklikt+=1;
			}
			else if(aantalGeklikt==1){
				kaart2=newId;
				if(kaart1==kaart2){
					document.getElementById("status").innerHTML="Goed zo!";
				}else{
					document.getElementById("status").innerHTML="Dit zijn verschillende kaartjes";
				}
				aantalGeklikt-=1;
			}
		}
    </script>
</body>
</html>
